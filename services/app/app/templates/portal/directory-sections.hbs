<div class="card mb-4">
  <div class="card-body">
    <p class="lead">Select your directory sections.</p>
    <p>For each section below, select the directory sections your company should be featured in.</p>
    <p>{{ i18n "companyDetailsP3Label"}}</p>
  </div>
</div>

<div class="row">
  {{#each (get-edge-nodes this "model.websiteSites") as |site|}}
    {{#if site.sections.edges.length}}
      {{directory-sections/site site=site selectedIds=selected onUpdate=(action "update")}}
    {{/if}}
  {{/each}}
</div>

<div class="fixed-bottom fixed-right card">
  <div class="card-body">
    <button disabled={{submitDisabled}} class="btn btn-success pull-right" {{ action "showModal" }}>
      {{entypo-icon "save"}} {{ i18n "saveChangesLabel"}}
    </button>
  </div>
</div>
{{submit-modal/directory-sections
  hash=hash
  isOpen=isModalOpen
  payload=payload
  onComplete=(action "transitionToPortal")
}}
