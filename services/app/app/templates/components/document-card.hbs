<div class="card mb-3">
  <h6 class="card-header">
    {{confirm-button
      icon="cross"
      label=""
      runningLabel="..."
      class="btn-danger btn-sm pull-right"
      iconClass=""
      disabled=isDisabled
      isRunning=isDiscarding
      onConfirm=(action "remove")
    }}
  </h6>
  <div class="card-body">
    <div class="row">
      <div class="col-12 col-md-6">
        {{ upload-document document=_document.fileSrc onUpload=(action "onUpload")}}
      </div>
      <div class="col-12 col-md-6">
        <div class="form-group">
          <label for={{concat this.elementId "-name-input"}}>Name</label>
          <Input
            @id={{concat this.elementId "-name-input"}}
            @type="text"
            @class="form-control"
            @value={{this._document.name}}
            @change={{action "onChange" "name"}}
            @required={{true}}
          />
        </div>
        <div class="form-group">
          <label for={{concat this.elementId "-teaser-input"}}>Teaser</label>
          <Input
            @id={{concat this.elementId "-teaser-input"}}
            @type="text"
            @class="form-control"
            @value={{this._document.teaser}}
            @change={{action "onChange" "teaser"}}
            @required={{false}}
          />
        </div>
        {{#if this.config.documentLabelOption}}
          <div class="form-group">
            <label for={{concat this.elementId "-label-input"}}>Mark as {{ this.config.documentLabelOption }}?</label>
            <Input
              @id={{concat this.elementId "-label-input"}}
              @type="checkbox"
              @checked={{this.includeLabel}}
              @change={{action "labelToggle"}}
            />
          </div>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="card-footer"></div>
</div>
